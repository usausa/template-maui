<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:s="http://smart/maui"
             xmlns:shell="clr-namespace:Template.MobileApp.Shell"
             xmlns:fonts="clr-namespace:Fonts"
             xmlns:module="clr-namespace:Template.MobileApp.Modules.Basic"
             x:Class="Template.MobileApp.Modules.Basic.BasicFontView"
             x:DataType="{x:Type module:BasicFontViewModel}"
             s:BindingContextResolver.Type="{x:Type module:BasicFontViewModel}"
             shell:ShellProperty.Title="Font"
             shell:ShellProperty.Function1Text="Back"
             shell:ShellProperty.Function1Enabled="True">

    <VerticalStackLayout Style="{StaticResource FillVerticalStack}">

        <!-- ReSharper disable MarkupAttributeTypo -->
        <Label FontSize="18" FontAttributes="Bold"
               Text="Default" />
        <Label FontSize="12"
               Text="+(1234567890.) ABCDEF 金額履歴" />
        <Label FontSize="18"
               Text="+(1234567890.) ABCDEF 金額履歴" />
        <Label FontSize="24"
               Text="+(1234567890.) ABCDEF 金額履歴" />

        <Label FontSize="18" FontAttributes="Bold"
               Text="OpenSansRegular" />
        <Label FontFamily="OpenSansRegular" FontSize="12"
               Text="+(1234567890.) ABCDEF" />
        <Label FontFamily="OpenSansRegular" FontSize="18"
               Text="+(1234567890.) ABCDEF" />
        <Label FontFamily="OpenSansRegular" FontSize="24"
               Text="+(1234567890.) ABCDEF" />

        <Label FontSize="18" FontAttributes="Bold"
               Text="OxaniumRegular" />
        <Label FontFamily="OxaniumRegular" FontSize="12"
               Text="+(1234567890.) ABCDEF" />
        <Label FontFamily="OxaniumRegular" FontSize="18"
               Text="+(1234567890.) ABCDEF" />
        <Label FontFamily="OxaniumRegular" FontSize="24"
               Text="+(1234567890.) ABCDEF" />

        <Label FontSize="18" FontAttributes="Bold"
               Text="Gkktt" />
        <Label FontFamily="Gkktt" FontSize="12"
               Text="+(1234567890.) ABCDEF" />
        <Label FontFamily="Gkktt" FontSize="18"
               Text="+(1234567890.) ABCDEF" />
        <Label FontFamily="Gkktt" FontSize="24"
               Text="+(1234567890.) ABCDEF" />

        <Label FontSize="18" FontAttributes="Bold"
               Text="DSEG7" />
        <Label FontFamily="DSEG7" FontSize="12"
               Text="1234567890." />
        <Label FontFamily="DSEG7" FontSize="18"
               Text="1234567890." />
        <Label FontFamily="DSEG7" FontSize="24"
               Text="1234567890." />

        <Label FontSize="18" FontAttributes="Bold"
               Text="MaterialIcons" />
        <HorizontalStackLayout Style="{StaticResource FillHorizontalStack}">
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Stay_current_portrait}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Create}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Save_alt}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Bluetooth}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Cloud_download}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Cloud_upload}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Phone_android}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Camera_alt}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Favorite}"
                   TextColor="{StaticResource BlueDefault}" />
            <Label FontFamily="MaterialIcons" FontSize="28"
                   Text="{x:Static fonts:MaterialIcons.Favorite_outline}"
                   TextColor="{StaticResource BlueDefault}" />
        </HorizontalStackLayout>

        <Label FontSize="18" FontAttributes="Bold"
               Text="FluentUI" />
        <HorizontalStackLayout Style="{StaticResource FillHorizontalStack}">
            <Label FontFamily="FluentUI" FontSize="28"
                   Text="{x:Static fonts:FluentUI.add_circle_28_regular}"
                   TextColor="{StaticResource CyanDefault}" />
            <Label FontFamily="FluentUI" FontSize="28"
                   Text="{x:Static fonts:FluentUI.save_28_regular}"
                   TextColor="{StaticResource CyanDefault}" />
            <Label FontFamily="FluentUI" FontSize="28"
                   Text="{x:Static fonts:FluentUI.bluetooth_28_regular}"
                   TextColor="{StaticResource CyanDefault}" />
            <Label FontFamily="FluentUI" FontSize="28"
                   Text="{x:Static fonts:FluentUI.phone_28_regular}"
                   TextColor="{StaticResource CyanDefault}" />
            <Label FontFamily="FluentUI" FontSize="28"
                   Text="{x:Static fonts:FluentUI.camera_28_regular}"
                   TextColor="{StaticResource CyanDefault}" />
            <Label FontFamily="FluentUI" FontSize="28"
                   Text="{x:Static fonts:FluentUI.heart_28_regular}"
                   TextColor="{StaticResource CyanDefault}" />
            <Label FontFamily="FluentUI" FontSize="28"
                   Text="{x:Static fonts:FluentUI.star_28_regular}"
                   TextColor="{StaticResource CyanDefault}" />
        </HorizontalStackLayout>

        <Label FontSize="18" FontAttributes="Bold"
               Text="ImageSource" />
        <HorizontalStackLayout Style="{StaticResource FillHorizontalStack}">
            <Image>
                <Image.Source>
                    <FontImageSource Color="{StaticResource RedDefault}"
                                     FontFamily="MaterialIcons"
                                     Glyph="{x:Static fonts:MaterialIcons.Error}"
                                     Size="28" />
                </Image.Source>
            </Image>
            <Image>
                <Image.Source>
                    <FontImageSource Color="{StaticResource OrangeDefault}"
                                     FontFamily="MaterialIcons"
                                     Glyph="{x:Static fonts:MaterialIcons.Warning}"
                                     Size="28" />
                </Image.Source>
            </Image>
        </HorizontalStackLayout>

        <!-- ReSharper restore MarkupAttributeTypo -->

    </VerticalStackLayout>

</ContentView>
