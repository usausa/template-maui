<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:s="http://smart/maui"
             xmlns:shell="clr-namespace:Template.MobileApp.Shell"
             xmlns:module="clr-namespace:Template.MobileApp.Modules.UI"
             x:Class="Template.MobileApp.Modules.UI.UILoginView"
             x:DataType="{x:Type module:UILoginViewModel}"
             s:BindingContextResolver.Type="{x:Type module:UILoginViewModel}"
             shell:ShellProperty.Title="Login"
             shell:ShellProperty.Function1Text="Back"
             shell:ShellProperty.Function1Enabled="True">

    <Grid Style="{StaticResource FillGrid}"
          RowDefinitions="192,*">

        <Path Aspect="Fill" Data="M0 0 L112 0 L112 48 A12 12 90 0 1 100 60 L12 60 A12 12 90 0 1 0 48 L0 0 Z" Fill="#03a9f4" StrokeThickness="0" />

        <VerticalStackLayout>
            <Border WidthRequest="96" HeightRequest="96"
                    Margin="0,48,0,0" Padding="0"
                    HorizontalOptions="Center" StrokeShape="RoundRectangle 48">
                <Image Source="profile.jpg"
                       Aspect="AspectFill" />
            </Border>
        </VerticalStackLayout>

    </Grid>

</ContentView>
