<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:s="http://smart/maui"
             xmlns:shell="clr-namespace:Template.MobileApp.Shell"
             xmlns:module="clr-namespace:Template.MobileApp.Modules.View"
             xmlns:animations="clr-namespace:Template.MobileApp.Animations"
             x:Class="Template.MobileApp.Modules.View.ViewEasingView"
             x:DataType="{x:Type module:ViewEasingViewModel}"
             s:BindingContextResolver.Type="{x:Type module:ViewEasingViewModel}"
             shell:ShellProperty.Title="Easing"
             shell:ShellProperty.Function1Text="Back"
             shell:ShellProperty.Function4Text="Run"
             shell:ShellProperty.Function1Enabled="True"
             shell:ShellProperty.Function4Enabled="True">

    <ContentView.Resources>
        <ResourceDictionary>

            <Style x:Key="EasingBackgroundGrid"
                   TargetType="Grid">
                <Setter Property="Margin" Value="3" />
                <Setter Property="BackgroundColor" Value="{StaticResource GreenLighten4}" />
            </Style>

            <Style x:Key="EasingLabel"
                   TargetType="Label">
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

            <Style x:Key="EasingBoxView"
                   TargetType="BoxView">
                <Setter Property="HorizontalOptions" Value="Start" />
                <Setter Property="VerticalOptions" Value="Start" />
                <Setter Property="WidthRequest" Value="16" />
                <Setter Property="HeightRequest" Value="16" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Color" Value="{StaticResource BlueDefault}" />
            </Style>

        </ResourceDictionary>
    </ContentView.Resources>

    <Grid Style="{StaticResource FillGrid}"
          RowDefinitions="*,*,*,*,*"
          ColumnDefinitions="*,*,*">

        <Grid Grid.Row="0" Grid.Column="0"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="Linear" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.Linear}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="SinOut" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.SinOut}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="SinIn" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.SinIn}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="2"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="SinInOut" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.SinInOut}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>


        <Grid Grid.Row="2" Grid.Column="0"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="CubicIn" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.CubicIn}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="1"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="CubicOut" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.CubicOut}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="2"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="CubicInOut" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.CubicInOut}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>


        <Grid Grid.Row="3" Grid.Column="0"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="BounceOut" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.BounceOut}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="BounceIn" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.BounceIn}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>


        <Grid Grid.Row="4" Grid.Column="0"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="SpringIn" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.SpringIn}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>

        <Grid Grid.Row="4" Grid.Column="1"
              Style="{StaticResource EasingBackgroundGrid}">
            <Label Style="{StaticResource EasingLabel}"
                   Text="SpringOut" />
            <BoxView Style="{StaticResource EasingBoxView}">
                <BoxView.Behaviors>
                    <s:EventRequestBehavior Request="{Binding AnimationRequest}">
                        <s:BeginAnimationAction>
                            <animations:EasingDemoAnimation Duration="2000"
                                                            Easing="{x:Static Easing.SpringOut}" />
                        </s:BeginAnimationAction>
                    </s:EventRequestBehavior>
                </BoxView.Behaviors>
            </BoxView>
        </Grid>

    </Grid>

</ContentView>
