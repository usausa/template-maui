<?xml version="1.0" encoding="utf-8" ?>
<Border xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="Template.MobileApp.Controls.SocialNotificationBadge"
        WidthRequest="16" HeightRequest="16"
        StrokeShape="Ellipse">
    <Border.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0.0" Color="{StaticResource RedAccent4}" />
            <GradientStop Offset="1.0" Color="{StaticResource RedAccent1}" />
        </LinearGradientBrush>
    </Border.Background>
    <Label FontSize="12" FontAttributes="Bold"
           Text="!"
           TextColor="White"
           HorizontalOptions="Center" VerticalOptions="Center" />
</Border>
