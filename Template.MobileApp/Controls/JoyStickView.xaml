<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Template.MobileApp.Controls"
             x:Class="Template.MobileApp.Controls.JoyStickView"
             x:Name="Root"
             x:DataType="{x:Type controls:JoyStickView}"
             WidthRequest="160" HeightRequest="160">

    <Grid>

        <Ellipse x:Name="BaseEllipse"
                 Fill="{Binding BaseBackground, Source={x:Reference Root}}"
                 HorizontalOptions="Center" VerticalOptions="Center" />

        <Polygon x:Name="UpArrow"
                 Fill="{Binding ArrowColor, Source={x:Reference Root}}"
                 HorizontalOptions="Fill" StrokeThickness="0" VerticalOptions="Fill" />
        <Polygon x:Name="DownArrow"
                 Fill="{Binding ArrowColor, Source={x:Reference Root}}"
                 HorizontalOptions="Fill" StrokeThickness="0" VerticalOptions="Fill" />
        <Polygon x:Name="LeftArrow"
                 Fill="{Binding ArrowColor, Source={x:Reference Root}}"
                 HorizontalOptions="Fill" StrokeThickness="0" VerticalOptions="Fill" />
        <Polygon x:Name="RightArrow"
                 Fill="{Binding ArrowColor, Source={x:Reference Root}}"
                 HorizontalOptions="Fill" StrokeThickness="0" VerticalOptions="Fill" />

        <Grid x:Name="ThumbGrid"
              WidthRequest="{Binding ThumbSize, Source={x:Reference Root}}"
              HeightRequest="{Binding ThumbSize, Source={x:Reference Root}}"
              HorizontalOptions="Center" VerticalOptions="Center">
            <Ellipse x:Name="ThumbBorder"
                     Fill="{Binding ThumbBorderBackground, Source={x:Reference Root}}" />
            <Ellipse x:Name="Thumb"
                     Margin="{Binding ThumbBorderWidth, Source={x:Reference Root}}"
                     Fill="{Binding ThumbBackground, Source={x:Reference Root}}" />
        </Grid>

    </Grid>

</ContentView>
